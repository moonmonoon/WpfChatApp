<UserControl x:Class="WpfChatApp.CustomControls.StatusThumbs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfChatApp.CustomControls"
             xmlns:viewmodels="clr-namespace:WpfChatApp.ViewModels"
             mc:Ignorable="d">
    <UserControl.Resources>

        <!--Idea here is to have 2 Ellipse:
            1) Outer ellipse for number of status thickness dashes
            2) Inner ellipse for status image
            3) A small ellipse for profile photo of contact
            & A textblock for contact name -->

        <DataTemplate x:Key="thumbsTemplate">
            <!--#region - Ellipse-->
            <Grid Margin="0,0,8,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Ellipse
                        Name="outerEllipse"
                        Width="55"
                        Height="55"
                        Stretch="Uniform"
                        StrokeThickness="1"
                        Stroke="#9fa8da"
                        StrokeDashArray="5"
                        StrokeDashCap="Round"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>

                    <Ellipse
                        Name="innerEllipse"
                        Width="50"
                        Height="50"
                        Stretch="Uniform"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                        <!--To-Do: Add Status Bindings
                            IsMeAddStatus=false, show the status image inside ellipse
                            true, fill the ellipse
                        -->
                        <Ellipse.Style>
                            <Style TargetType="{x:Type Ellipse}">
                                <Setter Property="Fill" Value="#9fa8da"/> 
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMeAddStatus}" Value="False">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <ImageBrush Stretch="UniformToFill" ImageSource="{Binding StatusImage}"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <!-- If IsMeAddStatus=false, hide the Add sign -->
                    <Path
                        Data="{StaticResource addSign}"
                        Fill="#dce1de"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                        <Path.Style>
                            <Style TargetType="{x:Type Path}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMeAddStatus}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </Grid>
                
                <!--#regoin - Contact profile ellipse-->
                <Ellipse
                        Name="contactPhotoEllipse"
                        Margin="40,0,0,8"
                        Width="26"
                        Height="26"
                        Stretch="Uniform"
                        StrokeThickness="2"
                        Stroke="#dce1de"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right">

                    <Ellipse.Fill>
                        <ImageBrush Stretch="UniformToFill" ImageSource="{Binding ContactPhoto}"/>
                    </Ellipse.Fill>

                    <!-- Also hide profile photo if the IsMeAddStatue=true -->
                    <Ellipse.Style>
                        <Style TargetType="{x:Type Ellipse}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMeAddStatus}" Value="True">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <!--#endregion-->

                <!--#regoin -Contact Name-->
                <!-- If ContactName is unspecified which can only happen in case if the Status is meant to be Add button here -->
                <TextBlock
                    Grid.Row="2"
                    Text="{Binding ContactName, TargetNullValue=Add}"
                    TextTrimming="CharacterEllipsis"
                    TextAlignment="Center"/>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->
        </DataTemplate>
    </UserControl.Resources>

    <ItemsControl 
        Margin="15,0"
        ItemTemplate="{StaticResource thumbsTemplate}" ItemsSource="{Binding statusThumbsCollection, UpdateSourceTrigger=PropertyChanged}">
        <ItemsControl.DataContext>
            <viewmodels:ViewModel/>
        </ItemsControl.DataContext>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
